%{
open Stroodel.Syntax
open Stroodel.Util
%}

// These tokens are used in the parser rules below and
// are known by both the parser and the lexer. First,
// all the keywords:
%token <Info> THE
%token <Info> ATOM
%token <Info> PAIR
%token <Info> LIST
%token <Info> LAMBDA
%token <Info> NAT
%token <Info> NIL
%token <Info> CONS
%token <Info> SAME
%token <Info> SOLE
%token <Info> ZERO

%token <Info> ATOMLITERAL

// identifier:
%token <string> ID
%token <int> INTV
// TODO: identifiers should be of type <string * Info> etc.!

// symbols:
%token <Info> LPAREN
%token <Info> RPAREN
%token <Info> TICK
%token <Info> EOF

// the parser returns a Syntax.Expr:
%start start
%type <Expr> start

%%

start: expr EOF { $1 }

expr:
	| LPAREN THE expr expr RPAREN	{ The ($3, $4) }
	| LPAREN PAIR expr expr RPAREN	{ Pair ($3, $4) }
	| LPAREN CONS expr expr RPAREN	{ Cons ($3, $4) }
	| LPAREN LIST expr RPAREN		{ ListType $3 }
	| LAMBDA expr expr				{ Lambda ($2, $3) }
	| TICK ID				{ AtomLiteral ("'" + $2) }
	| ID					{ Var $1 }
	| INTV					{ NatLiteral $1 }
	| ATOM					{ Atom }
	| SOLE					{ Sole }
	| ZERO					{ Zero }
	| NAT							{ Nat }
	| NIL							{ Nil }
